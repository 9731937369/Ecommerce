
<div class="container">
  <div class="row">
    <div class="offset-md-4">
    </div>
    <div class="col-sm-4 login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control input-sm", placeholder: "Enter email" %>
        </div>

        <div class="field">
          <!-- <a href='#' id="show"></a> -->
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm", placeholder: "Enter password"  %>
          <span id = "passwordError"></span>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <center><%= f.submit "Log in", class: "btn btn-success login-button" %></center>
        </div>
      <% end %>
    </div>
  </div>  
</div>
<style type="text/css">
  #user_email, #user_password {
    border-top: 0px;
    border-left: 0px;
    border-right: 0px;
    border-radius: 0px;
    border-bottom: 1px solid;
    border-color: green;
  }
  .login-button {
    width: 350px;
  }
  .login-form {
    margin-top: 130px;
  }
</style>
<script>
  var passwordHandle = document.getElementById('user_password');
  
  var passwordErrorHandle = document.querySelector('#passwordError')
  
  var showHandle = document.querySelector('#show');
  var showToggle = true;
  showHandle.addEventListener('click', function(e){
    if(showToggle){
      passwordHandle.setAttribute('type','text');
      showHandle.innerHTML = 'Hide';
      showToggle = false;
    }else{
      passwordHandle.setAttribute('type','password');
      showHandle.innerHTML = 'show';
      showToggle = true;
    }
    e.preventDefault();
  },false);
</script>